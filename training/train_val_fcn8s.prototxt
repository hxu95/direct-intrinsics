##### Deconvolution for pixel prediction #####

layer {
  name: "up-noshadow"
  type: "Deconvolution"
  bottom: "fuse_pool3"
  top: "out-noshadow"
  convolution_param {
    kernel_size: 8
    stride: 4
    num_output: 3
    group: 1
    pad: 2
    weight_filler: { type: "gaussian" std: 0.001 }
    bias_term: true
  }
  param { lr_mult: 10 decay_mult: 1 }
  param { lr_mult: 20 decay_mult: 0 }
}

##### L2 loss for comparing shadows #####

layer {
  name: "log-noshadow"
  bottom: "noshadow"
  top: "noshadow"
  type: "Python"
  python_param {
    module: "caffe_helper.layers.common_layers"
    layer: "LogLayer"
    param_str: "dict(offset=0.5)"
  }
}
layer {
  name: "loss-noshadow"
  type: "HingeLoss"
  bottom: "out-noshadow"
  bottom: "noshadow"
  top: "loss-noshadow"
  hinge_loss_param {
    norm: L2
  }
}
